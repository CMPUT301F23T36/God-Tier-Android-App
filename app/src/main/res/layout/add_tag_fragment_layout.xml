<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/choose_existing_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choose Existing Tag:"
        android:textSize="15sp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tag_list"
        app:layout_constraintStart_toStartOf="@+id/tag_list" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/choose_existing_tag"
        app:layout_constraintBottom_toTopOf="@id/create_new_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/create_new_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Tag:"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tag_list"
        app:layout_constraintEnd_toEndOf="@+id/tag_list"
        app:layout_constraintStart_toStartOf="@+id/tag_list"/>

    <EditText
        android:id="@+id/tag_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/new_tag_border"
        android:hint="Enter Tag Name"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/create_tag"
        app:layout_constraintEnd_toEndOf="@+id/tag_list"
        app:layout_constraintStart_toStartOf="@+id/tag_list"
        app:layout_constraintTop_toBottomOf="@id/create_new_tag" />

    <Button
        android:id="@+id/create_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Create"
        app:layout_constraintEnd_toStartOf="@id/clear_tag"
        app:layout_constraintStart_toStartOf="@id/tag_name"
        app:layout_constraintTop_toBottomOf="@id/tag_name" />

    <Button
        android:id="@+id/clear_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="@id/tag_name"
        app:layout_constraintStart_toEndOf="@id/create_tag"
        app:layout_constraintTop_toBottomOf="@id/tag_name" />
</androidx.constraintlayout.widget.ConstraintLayout>